# vim: filetype=neomuttrc

###############  Key Bindings  ###################



set abort_key = "<ESC>"

# Security setting (See 'Security concern' here: https://wiki.archlinux.org/title/mutt)
bind generic,alias,attach,browser,editor,index,compose,pager,pgp,postpone ':' noop
set edit_headers

###############  Sourcing  #######################

# Source default inbox
source /home/matteo/.config/mutt/accounts/m.gaetzner@gmx.de.muttrc

###############  Mutt-Wizard Things  #############

source /usr/share/mutt-wizard/mutt-wizard.muttrc

macro index,pager i1 '<sync-mailbox><enter-command>source /home/matteo/.config/mutt/accounts/blaalblab@gmail.com.muttrc<enter><change-folder>!<enter>;<check-stats>' "switch to blaalblab@gmail.com"
macro index,pager i3 '<sync-mailbox><enter-command>source /home/matteo/.config/mutt/accounts/gaetzner@tu-berlin.de.muttrc<enter><change-folder>!<enter>;<check-stats>' "switch to gaetzner@tu-berlin.de"
source /home/matteo/.config/mutt/accounts/m.gaetzner@gmx.de.muttrc
macro index,pager i2 '<sync-mailbox><enter-command>source /home/matteo/.config/mutt/accounts/m.gaetzner@gmx.de.muttrc<enter><change-folder>!<enter>;<check-stats>' "switch to m.gaetzner@gmx.de"
macro index,pager i4 '<sync-mailbox><enter-command>source /home/matteo/.config/mutt/accounts/matteo.gaetzner@techlabs.org.muttrc<enter><change-folder>!<enter>;<check-stats>' "switch to matteo.gaetzner@techlabs.org"
