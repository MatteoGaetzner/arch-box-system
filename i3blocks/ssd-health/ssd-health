percentage=$(sudo nvme smart-log $dev_path | grep "percentage_used" | awk '{print $3}' | sed 's/%//')
printf "$dev_path  $percentage%%\n"
printf "$dev_path  $percentage%%\n"
printf "#FFFFFF"
